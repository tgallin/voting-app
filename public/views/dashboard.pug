doctype html
html(lang='en')
  include includes/head.pug
  body
    include includes/navbar.pug
    div(class='container-fluid')
      div(class='row')
        div(class='col-sm-3 col-md-2 sidebar')
          ul(class='nav nav-sidebar')
            li(id='allpollsitem' class='active')
              a(href='#' id='allpolls') All polls
            if loggedIn
              li(id='mypollsitem')
                a(href='#' id='mypolls') My own polls
              li(id='newpollitem')
                a(href='#' id='newpoll') Create a new poll
        div(class='col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main')
          
          include includes/pollslist.pug
          include includes/newpoll.pug
  
          include includes/footer.pug
          script(type='text/javascript' src='/controllers/dashboardController.client.js')